<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.pmaclothing.facedetect"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.pmaclothing.activities.MainActivity"
            android:label="@string/title_actionbar_main" 
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
			android:name="de.pmaclothing.activities.FaceDetectorActivity"
			android:label="@string/title_actionbar_facedetect"
			android:screenOrientation="portrait" />
        <activity
			android:name="de.pmaclothing.activities.ChooseBackgroundActivity"
			android:label="@string/title_actionbar_background" />
        <activity
			android:name="de.pmaclothing.activities.OrderActivity"
			android:label="@string/title_actionbar_order" />
    </application>

</manifest>